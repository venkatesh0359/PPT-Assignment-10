public class Question4 {

    public static int length(String str) {
        if (str.isEmpty()) {
            return 0;
        } else {
            return 1 + length(str.substring(1));
        }
    }

    public static void main(String[] args) {
        String str = "abcd";
        System.out.println("The length of the string is " + length(str));

        str = "GEEKSFORGEEKS";
        System.out.println("The length of the string is " + length(str));
    }
}

